.header
    border $line-secondary solid $color-text-primary
    text-style(header)


.header-inner
    display flex
    flex-wrap nowrap
    align-items center
    margin-top $margin-l-0
    margin-bottom $margin-m-0

    #menu-btn
        display none

    .site-nav
        flex-grow 1
        overflow-x auto

.menu-list
    text-align right
    display flex
    .menu-item
        position relative
        margin-left $margin-l-0

    &:before
        content ""
        flex-grow 1

.menu-item
    underline-motion(header)

.menu-item-active:after
    border-bottom solid $line-secondary 
    width 100%


.logo-images-container {
    display: flex;
    justify-content: left; /* 居中显示图标 */
    gap: 30px; /* 图标之间的间距 */
}

.logo-img {
    width: 30px; 
    height: 30px;
    border-radius: 50%; /* 使图标圆形 */
    object-fit: cover; /* 确保图片裁剪得体 */
    transition: transform 0.3s ease; /* 平滑的鼠标悬停效果 */
}

.logo-img:hover {
    transform: scale(1.1); /* 鼠标悬停时放大效果 */
}


@media (max-width: 688px)
    .header-inner
        flex-wrap wrap
        #menu-btn
            display block!important
            text-align right
            width 50%
            
            .icon
                float right

        .site-brand-container
            width 50%
            
        .site-nav
            width 100%
            .menu-list
                height 0
                overflow hidden
                .menu-item
                    margin-right 0
                    margin-left auto
                    margin-top $margin-m-0


            .active
                margin-top $margin-m-1
                height auto
                flex-direction column
                 

        

        

    
